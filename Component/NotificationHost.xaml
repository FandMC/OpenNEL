<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="OpenNEL_WinUI.NotificationHost"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenNEL_WinUI">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Spacing="6">
        <ItemsControl ItemsSource="{x:Bind Items}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="local:ToastItem">
                    <Grid RenderTransformOrigin="0.5,0" Loaded="Toast_Loaded">
                        <Grid.RenderTransform>
                            <TranslateTransform Y="-40"/>
                        </Grid.RenderTransform>
                        <Border Padding="12,8" CornerRadius="8" Background="{x:Bind Background}" Opacity="0.98">
                            <TextBlock Text="{x:Bind Text}" Foreground="{x:Bind Foreground}" FontWeight="SemiBold"/>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>

